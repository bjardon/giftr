{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@giftr/core": ["../core/src"],
      "@giftr/core/*": ["../core/src/*"]
    }
  },
  "include": ["src/**/*", "sst-env.d.ts"],
  "exclude": ["node_modules", "sst.config.ts"]
}
